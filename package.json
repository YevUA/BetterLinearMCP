{
  "name": "agency-linear",
  "version": "1.0.5",
  "description": "A Linear MCP server for interacting with Linear's API",
  "type": "module",
  "bin": {
    "agency-linear": "build/index.js",
    "cursor-setup": "setup.js",
    "mcp-install": "install-linear-mcp.sh"
  },
  "files": [
    "build",
    "setup.js",
    "install-linear-mcp.sh"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "postinstall": "echo '\nðŸš€ To configure Cursor for agency-linear, you can either:\n  - Run: npx cursor-setup (interactive setup)\n  - Run: npx mcp-install (script-based setup)\n'"
  },
  "dependencies": {
    "@linear/sdk": "37.0.0",
    "@modelcontextprotocol/sdk": "0.6.0",
    "dotenv": "16.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "linear",
    "mcp",
    "model-context-protocol",
    "cli",
    "agency",
    "linear-api",
    "cursor",
    "claude"
  ],
  "author": "YevUA <yevhenii.m@gojilabs.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YevUA/agency-linear.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  }
}
